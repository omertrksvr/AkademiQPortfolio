@model List<AkademiqPortfolio.Data.Testimonial>
@{
    ViewData["Title"] = "Referans Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-8">
    <div class="flex flex-col sm:flex-row sm:items-end justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-white tracking-tight">Referanslarım</h2>
            <p class="text-slate-400 mt-1">Sizin hakkınızda geri bildirimde bulunan kişileri buradan yönetin.</p>
        </div>
        <a href="/Testimonial/CreateTestimonial/"
           class="flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-xl text-sm font-medium transition-all shadow-lg shadow-blue-600/20">
            <span class="material-symbols-outlined text-[20px]">add</span>
            <span>Yeni Referans Ekle</span>
        </a>
    </div>

    <div class="bg-[#1e2130] rounded-2xl border border-[#2e3245] overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-slate-400">
                <thead class="bg-white/5 text-xs uppercase font-semibold text-white border-b border-[#2e3245]">
                    <tr>
                        <th class="px-6 py-5 w-16">#</th>
                        <th class="px-6 py-5">Kişi</th>
                        <th class="px-6 py-5">Yorum</th>
                        <th class="px-6 py-5 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#2e3245]">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-white/[0.02] transition-colors group">
                            <td class="px-6 py-4 font-medium text-slate-500">@item.Id</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-12 rounded-full bg-[#101322] border border-[#2e3245] overflow-hidden p-0.5">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="w-full h-full object-cover rounded-full">
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center bg-purple-600/10 text-purple-500 font-bold">
                                                @item.NameSurname.Substring(0, 1).ToUpper()
                                            </div>
                                        }
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="font-bold text-white group-hover:text-blue-500 transition-colors">@item.NameSurname</span>
                                        <span class="text-[11px] text-slate-500">@item.Title</span>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <p class="line-clamp-2 max-w-md text-slate-400 italic">"@item.Comment"</p>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-1">
                                    <a href="/Testimonial/UpdateTestimonial/@item.Id" class="p-2 text-slate-500 hover:text-green-500 hover:bg-green-500/10 rounded-lg transition-all">
                                        <span class="material-symbols-outlined text-[22px]">edit</span>
                                    </a>
                                    <a href="/Testimonial/DeleteTestimonial/@item.Id" class="p-2 text-slate-500 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                        <span class="material-symbols-outlined text-[22px]">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>