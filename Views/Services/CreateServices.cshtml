@model AkademiqPortfolio.Data.Service
@{
    ViewData["Title"] = "Yeni Deneyim Oluştur";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="max-w-3xl mx-auto flex flex-col gap-8 pb-10">
    <div class="flex items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">Yeni Deneyim Ekle</h2>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Sunduğunuz hizmetleri veya teknik uzmanlık alanlarınızı tanımlayın.</p>
        </div>
        <a href="/Services/Index" class="flex items-center gap-2 text-slate-500 hover:text-primary transition-colors text-sm font-medium">
            <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            <span>Listeye Dön</span>
        </a>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-surface-border shadow-sm overflow-hidden">
        <form method="post" class="p-8 flex flex-col gap-6">

            <div class="flex flex-col gap-2">
                <label for="Title" class="text-sm font-semibold text-slate-700 dark:text-slate-300">
                    Hizmet / Deneyim Başlığı
                </label>
                <input type="text"
                       id="Title"
                       name="Title"
                       placeholder="Örn: Full Stack Geliştirme"
                       class="w-full px-4 py-2.5 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-surface-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all dark:text-white placeholder:text-slate-400"
                       required />
            </div>

            <div class="flex flex-col gap-2">
                <label for="Description" class="text-sm font-semibold text-slate-700 dark:text-slate-300">
                    Açıklama
                </label>
                <textarea id="Description"
                          name="Description"
                          rows="4"
                          placeholder="Sunduğunuz hizmetin detaylarını buraya yazın..."
                          class="w-full px-4 py-2.5 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-surface-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all dark:text-white placeholder:text-slate-400 resize-none"
                          required></textarea>
            </div>

            <div class="flex flex-col gap-2">
                <label for="Icon" class="text-sm font-semibold text-slate-700 dark:text-slate-300">
                    Material İkon Adı
                </label>
                <div class="relative">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 material-symbols-outlined text-[18px]">category</span>
                    <input type="text"
                           id="Icon"
                           name="Icon"
                           placeholder="Örn: code, terminal, design_services"
                           class="w-full pl-11 pr-4 py-2.5 bg-slate-50 dark:bg-white/5 border border-slate-200 dark:border-surface-border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all dark:text-white placeholder:text-slate-400"
                           required />
                </div>
                <div class="bg-blue-500/5 border border-blue-500/10 p-3 rounded-lg mt-1">
                    <p class="text-[11px] text-blue-500 leading-relaxed">
                        <strong>İpucu:</strong> İkonların görünmesi için <a href="https://fonts.google.com/icons" target="_blank" class="underline font-bold">Google Icons</a> sayfasındaki isimleri (küçük harf ve alt tire ile) kullanın. <br />
                        Sık kullanılanlar: <code>developer_mode</code>, <code>smartphone</code>, <code>database</code>, <code>palette</code>.
                    </p>
                </div>
            </div>

            <hr class="border-slate-200 dark:border-surface-border/50 my-2" />

            <div class="flex items-center justify-end gap-3">
                <button type="reset" class="px-6 py-2.5 rounded-lg text-sm font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-white/5 transition-colors">
                    Temizle
                </button>
                <button type="submit" class="flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-8 py-2.5 rounded-lg text-sm font-medium transition-all shadow-lg shadow-blue-500/20 active:scale-95">
                    <span class="material-symbols-outlined text-[20px]">add_circle</span>
                    <span>Deneyimi Oluştur</span>
                </button>
            </div>
        </form>
    </div>
</div>