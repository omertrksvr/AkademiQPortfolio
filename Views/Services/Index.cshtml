@model List<AkademiqPortfolio.Data.Service>
@{
    ViewData["Title"] = "Deneyim & Hizmetler";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="flex flex-col gap-8">
    <div class="flex flex-col sm:flex-row sm:items-end justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-slate-900 dark:text-white tracking-tight">Deneyim & Hizmet Yönetimi</h2>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Sunduğunuz hizmetleri veya iş deneyimlerinizi buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Services/CreateServices/" class="flex items-center justify-center gap-2 bg-primary hover:bg-blue-600 text-white px-4 py-2.5 rounded-lg text-sm font-medium transition-colors shadow-lg shadow-blue-500/20">
            <span class="material-symbols-outlined text-[20px]">add</span>
            <span>Yeni Deneyim Ekle</span>
        </a>
    </div>

    <div class="bg-white dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-surface-border overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-slate-500 dark:text-slate-400">
                <thead class="bg-slate-50 dark:bg-white/5 text-xs uppercase font-semibold text-slate-900 dark:text-white">
                    <tr>
                        <th class="px-6 py-4">#</th>
                        <th class="px-6 py-4">İkon</th>
                        <th class="px-6 py-4">Başlık</th>
                        <th class="px-6 py-4 w-1/2">Açıklama</th>
                        <th class="px-6 py-4 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 dark:divide-surface-border">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-50 dark:hover:bg-white/5 transition-colors">
                            <td class="px-6 py-4 font-medium">@item.ServicesId</td>
                            <td class="px-6 py-4">
                                <div class="size-10 rounded-lg bg-primary/10 flex items-center justify-center text-primary border border-primary/20">
                                    @* Veritabanındaki ikon ismini buraya basıyoruz *@
                                    <span class="material-symbols-outlined text-[22px]">@item.Icon</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="font-bold text-slate-900 dark:text-white">@item.Title</span>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-xs leading-relaxed line-clamp-2 max-w-md">@item.Description</p>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <a href="/Services/UpdateServices/@item.ServicesId" class="p-2 text-slate-400 hover:text-primary transition-colors" title="Güncelle">
                                        <span class="material-symbols-outlined text-[20px]">edit</span>
                                    </a>
                                    <a href="/Services/DeleteServices/@item.ServicesId" class="p-2 text-slate-400 hover:text-red-500 transition-colors" title="Sil" onclick="return confirm('@item.Title silinecektir. Emin misiniz?')">
                                        <span class="material-symbols-outlined text-[20px]">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="p-12 text-center">
                <p class="text-slate-500 dark:text-slate-400">Henüz bir deneyim veya hizmet eklenmemiş.</p>
            </div>
        }
    </div>
</div>