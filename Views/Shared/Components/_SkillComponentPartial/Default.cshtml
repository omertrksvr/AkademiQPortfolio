@model List<AkademiqPortfolio.Data.SkillTable>

<div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">
    @foreach (var item in Model)
    {
        <div class="space-y-3">
            <div class="flex justify-between items-end">
                <h4 class="text-sm font-bold text-slate-200 uppercase tracking-wider">@item.Title</h4>
                <span class="text-xs font-black text-blue-500 bg-blue-500/10 px-2 py-1 rounded-lg">@item.Levels%</span>
            </div>
            <div class="h-2.5 w-full bg-slate-800/50 rounded-full overflow-hidden border border-white/5">
                <div class="bg-gradient-to-r from-blue-600 to-indigo-500 h-full rounded-full"
                     style="width: @item.Levels%"></div>
            </div>
        </div>
    }
</div>