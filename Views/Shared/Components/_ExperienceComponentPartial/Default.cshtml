@model List<AkademiqPortfolio.Data.Experience>

<div class="relative space-y-8 before:absolute before:inset-0 before:left-8 before:h-full before:w-0.5 before:bg-white/10">
    @foreach (var item in Model)
    {
        <div class="relative pl-16 group">
            <div class="absolute left-6 top-0 size-4 rounded-full bg-blue-600 border-4 border-[#0f111a] z-10 group-hover:scale-125 transition-transform"></div>

            <div class="bg-[#1e2130]/40 p-6 rounded-3xl border border-white/5 hover:border-blue-500/30 transition-all shadow-xl backdrop-blur-sm">

                <div class="flex items-center gap-2 text-blue-500 font-bold text-xs uppercase tracking-widest mb-2">
                    <span class="material-symbols-outlined text-sm">calendar_month</span>
                    @if (item.StartDate.HasValue)
                    {
                        @item.StartDate.Value.ToString("MMM yyyy")
                    }
                    else
                    {
                        <span>Belirtilmedi</span>
                    }
                    —
                    @(item.EndDate.HasValue ? item.EndDate.Value.ToString("MMM yyyy") : "Devam Ediyor")
                </div>

                <h3 class="text-xl font-bold text-white">@item.Title</h3>
                <p class="text-indigo-400 text-sm font-semibold mb-3">@item.CompanyName</p>

                <p class="text-slate-400 text-sm leading-relaxed">
                    @item.Description
                </p>
            </div>
        </div>
    }
</div>