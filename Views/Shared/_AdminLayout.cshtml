<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ömer Türksever</title>
    @* Gerekli Fontlar ve Tailwind (Önceki mesajdaki gibi kalabilir) *@
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        .icon-fill {
            font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-[#101322] text-slate-100 font-display min-h-screen overflow-hidden">
    <div class="flex h-screen w-full relative">
        <aside class="w-64 bg-[#111218] border-r border-[#2e3245] flex flex-col h-full">
            <div class="h-16 flex items-center gap-3 px-6 border-b border-[#2e3245]/50">
                <div class="bg-blue-600/20 p-2 rounded-lg text-blue-500">
                    <span class="material-symbols-outlined">grid_view</span>
                </div>
                <h1 class="text-white text-lg font-bold">Ömer Türksever</h1>
            </div>

            <nav class="flex-1 overflow-y-auto py-6 px-4 flex flex-col gap-1">
                <a href="/Admin/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg bg-blue-600 text-white shadow-lg shadow-blue-600/20">
                    <span class="material-symbols-outlined icon-fill">dashboard</span>
                    <span class="text-sm font-medium">Dashboard</span>
                </a>
                <a href="/Project/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">folder</span>
                    <span class="text-sm font-medium">Projelerim</span>
                </a>
                <a href="/Skill/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">bolt</span>
                    <span class="text-sm font-medium">Yeteneklerim</span>
                </a>
                <a href="/Experience/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">work</span>
                    <span class="text-sm font-medium">Deneyimlerim</span>
                </a>

                <div class="mt-6 mb-2 px-3">
                    <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500">İçerik Yönetimi</span>
                </div>

                <a href="/About/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">person</span>
                    <span class="text-sm font-medium">Hakkımda</span>
                </a>
                <a href="/Education/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">school</span>
                    <span class="text-sm font-medium">Eğitimlerim</span>
                </a>
                <a href="/Testimonial/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">format_quote</span>
                    <span class="text-sm font-medium">Referanslarım</span>
                </a>
                <a href="/SocialMedia/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">share</span>
                    <span class="text-sm font-medium">Sosyal Medya</span>
                </a>

                <div class="mt-6 mb-2 px-3">
                    <span class="text-[10px] font-bold uppercase tracking-widest text-slate-500">İletişim</span>
                </div>
                <a href="/Message/Index" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-white/5 transition-colors">
                    <span class="material-symbols-outlined">mail</span>
                    <span class="text-sm font-medium">Mesajlarım</span>
                    <span class="ml-auto bg-blue-600 text-[10px] px-1.5 py-0.5 rounded-full text-white">3</span>
                </a>
            </nav>

            <div class="p-4 border-t border-[#2e3245]/50">
                <div class="flex items-center gap-3">
                    <img src="/images/pro.jpg" class="size-10 rounded-full object-cover border-2 border-[#2e3245]" />
                    <div class="flex flex-col">
                        <p class="text-sm font-bold text-white">Ömer Türksever</p>
                        <p class="text-[10px] text-slate-500">omerturksever03@gmail.com</p>
                    </div>
                </div>
            </div>
        </aside>

        <main class="flex-1 flex flex-col h-full overflow-hidden bg-[#101322]">
            <header class="h-16 flex items-center justify-between px-10 border-b border-[#2e3245]/50 shrink-0">
                <h2 class="text-white font-medium">Dashboard</h2>
                <div class="flex items-center gap-4">
                    <button class="text-slate-400 hover:text-white relative">
                        <span class="material-symbols-outlined">notifications</span>
                        <span class="absolute top-0 right-0 size-2 bg-red-500 rounded-full border border-[#101322]"></span>
                    </button>
                    <button class="bg-white/5 hover:bg-white/10 text-white px-4 py-1.5 rounded-lg border border-white/10 text-sm flex items-center gap-2">
                        <span class="material-symbols-outlined text-sm">logout</span> Logout
                    </button>
                </div>
            </header>

            <div class="flex-1 overflow-y-auto p-10">
                @RenderBody()
            </div>
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>