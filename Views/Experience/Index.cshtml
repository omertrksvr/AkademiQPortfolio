@using AkademiqPortfolio.Data
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    /* Tasarımın bozulmaması için mevcut CSS'inizi koruyoruz */
    body {
        background-color: #0f172a;
        color: #e2e8f0;
        font-family: 'Inter', sans-serif;
    }

    .dashboard-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .header-text h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.5rem;
    }

    .header-text p {
        color: #94a3b8;
        font-size: 0.95rem;
    }

    .btn-add {
        color: #ffffff;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-add:hover {
            color: #3b82f6;
        }

    .table-container {
        background: #1e293b;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        color: #94a3b8;
    }

        .table thead th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 1rem;
            border-bottom: 1px solid #334155;
            text-align: left;
            color: #f8fafc;
        }

        .table tbody td {
            padding: 1.25rem 1rem;
            border-bottom: 1px solid #334155;
            vertical-align: middle;
        }

    .skill-icon {
        width: 40px;
        height: 40px;
        border: 1px solid #475569;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #ffffff;
        margin-right: 1rem;
    }

    .skill-info {
        display: flex;
        align-items: center;
    }

    .skill-name {
        font-weight: 600;
        color: #ffffff;
        font-size: 1rem;
    }

    .level-container {
        width: 100%;
        max-width: 250px;
    }

    .level-label {
        display: flex;
        justify-content: space-between;
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .progress-bg {
        background: #334155;
        height: 4px;
        border-radius: 10px;
        width: 100%;
    }

    .progress-fill {
        background: #3b82f6;
        height: 100%;
        border-radius: 10px;
    }

    .action-icons {
        display: flex;
        gap: 1rem;
    }

    .action-link {
        color: #94a3b8;
        transition: color 0.2s;
        font-size: 1.1rem;
    }

        .action-link.edit:hover {
            color: #60a5fa;
        }

        .action-link.delete:hover {
            color: #f87171;
        }

    .id-column {
        color: #64748b;
        font-weight: 500;
    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="header-text">
            <h1>Deneyim Yönetimi</h1>
            <p>Veritabanındaki deneyimlerinizi buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Experience/CreateExperience/" class="btn-add">
            <i class="fas fa-plus"></i> Yeni Deneyim Ekle
        </a>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>DENEYİM BAŞLIĞI</th>
                    <th>SEVİYE (YÜZDE)</th>
                    <th style="text-align: right;">İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="id-column">@item.Id</td>
                            <td>
                                <div class="skill-info">
                                    <div class="skill-icon">
                                        @(!string.IsNullOrEmpty(item.Title) ? item.Title.Substring(0, 1).ToUpper() : "E")
                                    </div>
                                    <div>
                                        <div class="skill-name">@item.Title</div>
                                        <small style="color: #64748b;">@item.CompanyName</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="date-text" style="font-size: 0.85rem; color: #94a3b8;">
                                    <i class="far fa-calendar-alt me-1"></i>
                                    @item.StartDate?.ToString("dd.MM.yyyy") -
                                    @(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd.MM.yyyy") : "Devam Ediyor")
                                </div>
                            </td>
                            <td>
                                <div class="action-icons" style="justify-content: flex-end;">
                                    <a href="/Experience/UpdateExperience/@item.Id" class="action-link edit" title="Güncelle">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a href="/Experience/DeleteExperience/@item.Id" class="action-link delete" title="Sil" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>