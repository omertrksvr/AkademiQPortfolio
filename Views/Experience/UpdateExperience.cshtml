@model AkademiqPortfolio.Data.Experience

@{
    ViewData["Title"] = "Deneyim Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #0f172a;
        color: #e2e8f0;
        font-family: 'Inter', sans-serif;
    }

    .update-experience-container {
        padding: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 2rem;
    }

        .page-header h1 {
            color: #ffffff;
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            color: #94a3b8;
        }

    .breadcrumb-nav {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

        .breadcrumb-nav a {
            color: #64748b;
            text-decoration: none;
        }

        .breadcrumb-nav .current {
            color: #ffffff;
        }

    .form-card {
        background-color: #1e293b;
        border-radius: 12px;
        padding: 2.5rem;
        border: 1px solid #334155;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .info-badge {
        background-color: #0f172a;
        border: 1px solid #334155;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .info-badge i {
            color: #3b82f6;
        }

    .form-row {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-group {
        flex: 1;
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        color: #e2e8f0;
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 0.6rem;
    }

    .required {
        color: #ef4444;
        margin-left: 0.25rem;
    }

    .form-input {
        width: 100%;
        background-color: #0f172a;
        border: 1px solid #334155;
        border-radius: 8px;
        padding: 0.8rem 1rem;
        color: #ffffff;
        font-size: 0.95rem;
        transition: all 0.2s;
    }

        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        }

    textarea.form-input {
        min-height: 120px;
        resize: vertical;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #334155;
    }

    .btn {
        padding: 0.8rem 1.8rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-primary {
        background-color: #3b82f6;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2563eb;
        }

    .btn-secondary {
        background-color: transparent;
        border: 1px solid #475569;
        color: #94a3b8;
    }

        .btn-secondary:hover {
            background-color: #334155;
            color: white;
        }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .form-actions {
            flex-direction: column-reverse;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="update-experience-container">
    <div class="breadcrumb-nav">
        <a href="/Experience/Index">
            <i class="fas fa-briefcase"></i> Deneyimler
        </a>
        <span><i class="fas fa-chevron-right"></i></span>
        <span class="current">Deneyim Güncelle</span>
    </div>

    <div class="page-header">
        <h1>Deneyim Güncelle</h1>
        <p>Mevcut iş tecrübenize ait bilgileri aşağıdan düzenleyebilirsiniz.</p>
    </div>

    <div class="form-card">
        <div class="info-badge">
            <i class="fas fa-info-circle"></i>
            <span style="font-size: 0.85rem; color: #94a3b8;">
                Düzenlemelerinizi yaptıktan sonra "Değişiklikleri Kaydet" butonuna basarak veritabanını güncelleyebilirsiniz.
            </span>
        </div>

        <form method="post">
            @* CRITICAL: Kaydı bulabilmek için gizli ID alanı *@
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Görev Başlığı <span class="required">*</span></label>
                    <input type="text" class="form-input" name="Title" value="@Model.Title" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Şirket Adı <span class="required">*</span></label>
                    <input type="text" class="form-input" name="CompanyName" value="@Model.CompanyName" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Başlangıç Tarihi <span class="required">*</span></label>
                    <input type="date" class="form-input" name="StartDate"
                           value="@Model.StartDate?.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="date" class="form-input" name="EndDate"
                           value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                    <small style="color: #64748b; font-size: 0.8rem;">Devam ediyorsa boş bırakın.</small>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Açıklama / Görev Detayları</label>
                <textarea class="form-input" name="Description">@Model.Description</textarea>
            </div>

            <div class="form-actions">
                <a href="/Experience/Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Değişiklikleri Kaydet
                </button>
            </div>
        </form>
    </div>
</div>