@model AkademiqPortfolio.Data.SkillTable
@{
    ViewData["Title"] = "Yetenek Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-3xl mx-auto space-y-8 pb-20">
    @* Üst Başlık ve Geri Dönüş *@
    <div class="flex items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-white tracking-tight">Yetenek Güncelle</h2>
            <p class="text-slate-400 mt-1">#@Model.SkillId numaralı yeteneğin bilgilerini ve seviyesini buradan düzenleyin.</p>
        </div>
        <a href="/Skill/Index" class="flex items-center gap-2 text-slate-400 hover:text-white transition-all text-sm font-medium group">
            <span class="material-symbols-outlined text-[20px] group-hover:-translate-x-1 transition-transform">arrow_back</span>
            <span>Listeye Dön</span>
        </a>
    </div>

    @* Form Kartı *@
    <div class="bg-[#1e2130] rounded-2xl border border-[#2e3245] shadow-xl overflow-hidden">
        <form method="post" class="p-8 space-y-6">

            @* Yetenek ID (Salt Okunur) *@
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-500 ml-1">
                    Yetenek ID (Değiştirilemez)
                </label>
                <input type="text"
                       name="SkillId"
                       value="@Model.SkillId"
                       class="w-full px-4 py-3 bg-[#101322]/50 border border-[#2e3245] rounded-xl text-slate-600 cursor-not-allowed outline-none opacity-70"
                       readonly />
            </div>

            @* Yetenek Başlığı *@
            <div class="space-y-2">
                <label for="Title" class="text-sm font-semibold text-slate-300 ml-1">
                    Yetenek Başlığı
                </label>
                <div class="relative group">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 material-symbols-outlined text-[20px] group-focus-within:text-primary transition-colors">bolt</span>
                    <input type="text"
                           id="Title"
                           name="Title"
                           value="@Model.Title"
                           placeholder="Örn: C#"
                           class="w-full pl-12 pr-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white placeholder:text-slate-600"
                           required />
                </div>
            </div>

            @* Yetenek Seviyesi *@
            <div class="space-y-2">
                <label for="Levels" class="text-sm font-semibold text-slate-300 ml-1">
                    Seviye (%)
                </label>
                <div class="relative group">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 material-symbols-outlined text-[20px] group-focus-within:text-primary transition-colors">leaderboard</span>
                    <input type="number"
                           id="Levels"
                           name="Levels"
                           min="0"
                           max="100"
                           value="@Model.Levels"
                           class="w-full pl-12 pr-12 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white"
                           required />
                    <span class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-500 font-bold group-focus-within:text-white transition-colors">%</span>
                </div>
            </div>

            @* Alt Butonlar *@
            <div class="pt-6 border-t border-[#2e3245]">
                <div class="flex items-center justify-end gap-4">
                    <a href="/Skill/Index" class="px-6 py-3 rounded-xl text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 transition-all">
                        İptal
                    </a>
                    <button type="submit" class="flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-10 py-3 rounded-xl text-sm font-bold transition-all shadow-lg shadow-green-600/20 active:scale-95">
                        <span class="material-symbols-outlined text-[20px]">sync</span>
                        <span>Değişiklikleri Kaydet</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>