@model List<AkademiqPortfolio.Data.SkillTable>
@{
    ViewData["Title"] = "Yetenek Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-8">
    @* Üst Başlık ve Aksiyon Alanı *@
    <div class="flex flex-col sm:flex-row sm:items-end justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-white tracking-tight">Yetenek Yönetimi</h2>
            <p class="text-slate-400 mt-1">Sistemde kayıtlı olan teknik yeteneklerinizi buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Skill/CreateSkill/"
           class="flex items-center justify-center gap-2 bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-xl text-sm font-medium transition-all shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined text-[20px]">add</span>
            <span>Yeni Yetenek Ekle</span>
        </a>
    </div>

    @* Liste Kartı / Tablo *@
    <div class="bg-[#1e2130] rounded-2xl border border-[#2e3245] overflow-hidden shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-slate-400">
                <thead class="bg-white/5 text-xs uppercase font-semibold text-white border-b border-[#2e3245]">
                    <tr>
                        <th class="px-6 py-5">#</th>
                        <th class="px-6 py-5">Yetenek Başlığı</th>
                        <th class="px-6 py-5">Seviye (Yüzde)</th>
                        <th class="px-6 py-5 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#2e3245]">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-white/[0.02] transition-colors group">
                            <td class="px-6 py-4 font-medium text-slate-500">@item.SkillId</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-10 rounded-xl bg-primary/10 flex items-center justify-center text-primary font-bold border border-primary/20">
                                        @item.Title.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="font-bold text-white group-hover:text-primary transition-colors">@item.Title</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col gap-2 min-w-[150px]">
                                    <div class="flex justify-between items-center text-[11px] font-bold">
                                        <span class="text-slate-500 uppercase tracking-wider">Yetkinlik</span>
                                        <span class="text-white">@item.Levels%</span>
                                    </div>
                                    @* BARIN DOLMASINI SAĞLAYAN DÜZENLEME *@
                                    <div class="w-full bg-slate-800 rounded-full h-2 overflow-hidden border border-[#2e3245]">
                                        @* bg-primary yerine bg-blue-600 kullanarak rengi garantiye alıyoruz *@
                                        <div class="bg-blue-600 h-full rounded-full transition-all duration-1000"
                                             style="width: @(item.Levels)%"></div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-1">
                                    <a href="/Skill/UpdateSkill/@item.SkillId"
                                       class="p-2 text-slate-500 hover:text-green-500 hover:bg-green-500/10 rounded-lg transition-all"
                                       title="Güncelle">
                                        <span class="material-symbols-outlined text-[22px]">edit</span>
                                    </a>
                                    <a href="/Skill/DeleteSkill/@item.SkillId"
                                       class="p-2 text-slate-500 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all"
                                       title="Sil"
                                       onclick="return confirm('Bu yeteneği silmek istediğinize emin misiniz?')">
                                        <span class="material-symbols-outlined text-[22px]">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="p-20 text-center">
                <div class="bg-[#101322] size-20 rounded-full flex items-center justify-center mx-auto mb-4 border border-[#2e3245]">
                    <span class="material-symbols-outlined text-slate-600 text-[40px]">bolt</span>
                </div>
                <h4 class="text-white font-bold text-lg">Yetenek Kaydı Bulunamadı</h4>
                <p class="text-slate-500 max-w-xs mx-auto mt-2">Listeniz henüz boş. Teknik becerilerinizi ekleyerek başlayabilirsiniz.</p>
            </div>
        }
    </div>
</div>