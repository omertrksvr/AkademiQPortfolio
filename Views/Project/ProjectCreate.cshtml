@model AkademiqPortfolio.Data.ProjectsTable
@{
    ViewData["Title"] = "Yeni Proje Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-3xl mx-auto space-y-8">
    @* Üst Başlık ve Geri Dönüş *@
    <div class="flex items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-white tracking-tight">Yeni Proje Oluştur</h2>
            <p class="text-slate-400 mt-1">Portfolyonuza yeni bir çalışma ekleyin ve detaylarını belirleyin.</p>
        </div>
        <a href="/Project/Index" class="flex items-center gap-2 text-slate-400 hover:text-white transition-all text-sm font-medium group">
            <span class="material-symbols-outlined text-[20px] group-hover:-translate-x-1 transition-transform">arrow_back</span>
            <span>Listeye Dön</span>
        </a>
    </div>

    @* Form Kartı *@
    <div class="bg-[#1e2130] rounded-2xl border border-[#2e3245] shadow-xl overflow-hidden">
        <form method="post" class="p-8 space-y-6">

            @* Proje Adı *@
            <div class="space-y-2">
                <label for="ProjectName" class="text-sm font-semibold text-slate-300 ml-1">
                    Proje Adı
                </label>
                <input type="text"
                       id="ProjectName"
                       name="ProjectName"
                       placeholder="Örn: E-Ticaret Sitesi Arayüzü"
                       class="w-full px-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white placeholder:text-slate-600"
                       required />
            </div>

            @* Proje Başlığı *@
            <div class="space-y-2">
                <label for="Title" class="text-sm font-semibold text-slate-300 ml-1">
                    Proje Kısa Başlığı
                </label>
                <input type="text"
                       id="Title"
                       name="Title"
                       placeholder="Örn: .NET Core & React Geliştirme"
                       class="w-full px-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white placeholder:text-slate-600"
                       required />
            </div>

            @* Görsel URL *@
            <div class="space-y-2">
                <label for="Image" class="text-sm font-semibold text-slate-300 ml-1">
                    Proje Görsel URL
                </label>
                <div class="relative group">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 material-symbols-outlined text-[20px] group-focus-within:text-primary transition-colors">link</span>
                    <input type="text"
                           id="Image"
                           name="Image"
                           placeholder="https://resim-yolu.com/resim.jpg"
                           class="w-full pl-12 pr-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white placeholder:text-slate-600"
                           required />
                </div>
            </div>

            @* Kategori Seçimi *@
            <div class="space-y-2">
                <label for="CategoryId" class="text-sm font-semibold text-slate-300 ml-1">
                    Proje Kategorisi
                </label>
                <div class="relative">
                    <select name="CategoryId"
                            id="CategoryId"
                            class="w-full px-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white appearance-none cursor-pointer"
                            required>
                        <option value="" disabled selected>Bir kategori seçin</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.Value" class="bg-[#1e2130]">@item.Text</option>
                        }
                    </select>
                    <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-500">
                        <span class="material-symbols-outlined text-[24px]">expand_more</span>
                    </div>
                </div>
            </div>

            <div class="pt-4 border-t border-[#2e3245]">
                <div class="flex items-center justify-end gap-4">
                    <button type="reset" class="px-6 py-3 rounded-xl text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 transition-all">
                        Formu Temizle
                    </button>
                    <button type="submit" class="flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-10 py-3 rounded-xl text-sm font-bold transition-all shadow-lg shadow-primary/20 active:scale-95">
                        <span class="material-symbols-outlined text-[20px]">add_task</span>
                        <span>Projeyi Yayınla</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>