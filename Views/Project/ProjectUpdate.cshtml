@using Microsoft.AspNetCore.Mvc.Rendering
@model AkademiqPortfolio.Data.ProjectsTable
@{
    ViewData["Title"] = "Proje Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Kategori listesini güvenli bir şekilde alıyoruz
    var categoryList = (List<SelectListItem>)ViewBag.Categories;
}

<div class="max-w-3xl mx-auto space-y-8 pb-20">

    @* Üst Başlık ve Geri Dönüş *@
    <div class="flex items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-white tracking-tight">Proje Güncelle</h2>
            <p class="text-slate-400 mt-1">#@Model.ProjectId numaralı projenin bilgilerini buradan düzenleyebilirsiniz.</p>
        </div>
        <a href="/Project/Index" class="flex items-center gap-2 text-slate-400 hover:text-white transition-all text-sm font-medium group">
            <span class="material-symbols-outlined text-[20px] group-hover:-translate-x-1 transition-transform">arrow_back</span>
            <span>Listeye Dön</span>
        </a>
    </div>

    @* Form Kartı *@
    <div class="bg-[#1e2130] rounded-2xl border border-[#2e3245] shadow-xl overflow-visible">
        <form method="post" class="p-8 space-y-6">

            @* Proje ID (Salt Okunur) *@
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-500 ml-1">
                    Proje ID (Değiştirilemez)
                </label>
                <input type="text"
                       name="ProjectId"
                       value="@Model.ProjectId"
                       class="w-full px-4 py-3 bg-[#101322]/50 border border-[#2e3245] rounded-xl text-slate-500 cursor-not-allowed outline-none opacity-70"
                       readonly />
            </div>

            @* Proje Adı *@
            <div class="space-y-2">
                <label for="ProjectName" class="text-sm font-semibold text-slate-300 ml-1">
                    Proje Adı
                </label>
                <input type="text"
                       id="ProjectName"
                       name="ProjectName"
                       value="@Model.ProjectName"
                       class="w-full px-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white"
                       required />
            </div>

            @* Proje Başlığı *@
            <div class="space-y-2">
                <label for="Title" class="text-sm font-semibold text-slate-300 ml-1">
                    Proje Başlığı
                </label>
                <input type="text"
                       id="Title"
                       name="Title"
                       value="@Model.Title"
                       class="w-full px-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white"
                       required />
            </div>

            @* Görsel URL *@
            <div class="space-y-2">
                <label for="Image" class="text-sm font-semibold text-slate-300 ml-1">
                    Görsel URL
                </label>
                <div class="relative group">
                    <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 material-symbols-outlined text-[20px] group-focus-within:text-primary transition-colors">image</span>
                    <input type="text"
                           id="Image"
                           name="Image"
                           value="@Model.Image"
                           class="w-full pl-12 pr-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white"
                           required />
                </div>
            </div>

            @* Kategori Seçimi *@
            <div class="space-y-2">
                <label for="CategoryId" class="text-sm font-semibold text-slate-300 ml-1">
                    Kategori
                </label>
                <div class="relative">
                    @Html.DropDownListFor(x => x.CategoryId, categoryList, "Kategori Seçiniz", new
                        {
                            @class = "w-full px-4 py-3 bg-[#101322] border border-[#2e3245] rounded-xl focus:ring-2 focus:ring-primary/50 focus:border-primary outline-none transition-all text-white appearance-none cursor-pointer"
                        })
                    <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-500">
                        <span class="material-symbols-outlined text-[24px]">expand_more</span>
                    </div>
                </div>
            </div>

            @* Alt Butonlar *@
            <div class="pt-6 border-t border-[#2e3245]">
                <div class="flex items-center justify-end gap-4">
                    <a href="/Project/Index" class="px-6 py-3 rounded-xl text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 transition-all">
                        İptal
                    </a>
                    <button type="submit" class="flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-10 py-3 rounded-xl text-sm font-bold transition-all shadow-lg shadow-green-600/20 active:scale-95">
                        <span class="material-symbols-outlined text-[20px]">check_circle</span>
                        <span>Değişiklikleri Kaydet</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>