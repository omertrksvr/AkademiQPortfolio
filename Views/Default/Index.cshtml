@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ömer Türksever | Software Developer</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            scroll-behavior: smooth;
        }

        .glass-card {
            background: rgba(30, 33, 48, 0.4);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
    </style>
</head>
<body class="bg-[#0f111a] text-slate-300 selection:bg-blue-500/30 selection:text-blue-200">

    @await Component.InvokeAsync("_NavbarComponentPartial")

    <main>
        @await Component.InvokeAsync("_HeroComponentPartial")

        <section id="about" class="py-24 relative overflow-hidden">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
                    @await Component.InvokeAsync("_AboutComponentPartial")

                    <div class="space-y-8">
                        <div class="flex items-center gap-4 mb-4">
                            <span class="h-px w-12 bg-blue-500"></span>
                            <span class="text-blue-500 font-bold uppercase tracking-widest text-xs">Yetenekler</span>
                        </div>
                        @await Component.InvokeAsync("_SkillComponentPartial")
                    </div>
                </div>
            </div>
        </section>

        <section id="experience" class="py-24 bg-[#1e2130]/20">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-black text-white mb-4">İş Deneyimi</h2>
                    <p class="text-slate-500 max-w-xl mx-auto">Profesyonel kariyerimdeki duraklar ve üstlendiğim sorumluluklar.</p>
                </div>

                @await Component.InvokeAsync("_ExperienceComponentPartial")
            </div>
        </section>

        <section id="projects" class="py-24 bg-[#0f111a]">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-black text-white mb-4">Seçkin Projeler</h2>
                    <p class="text-slate-500 max-w-xl mx-auto">Modern teknolojilerle geliştirdiğim yazılım çözümleri.</p>
                </div>

                @await Component.InvokeAsync("_ProjectComponentPartial")
            </div>
        </section>

        <section id="contact" class="py-24 relative overflow-hidden">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-blue-600/5 rounded-full blur-[120px] pointer-events-none"></div>

            <div class="container mx-auto px-6 relative z-10">
                @await Component.InvokeAsync("_ContactComponentPartial")
            </div>
        </section>

    </main>

    <footer class="py-12 border-t border-white/5 text-center bg-[#0f111a]">
        <p class="text-sm text-slate-600">
            &copy; @DateTime.Now.Year Ömer Türksever. Tüm Hakları Saklıdır.
        </p>
    </footer>

</body>
</html>